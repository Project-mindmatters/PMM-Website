{
  "version": 2,
  "outputDirectory": "public",
  "cleanUrls": false,
  "trailingSlash": false,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "status": 404, "dest": "/404.html" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/pages/index.html" },
    { "source": "/index", "destination": "/pages/index.html" },
    { "source": "/index.html", "destination": "/pages/index.html" },
    { "source": "/about", "destination": "/pages/about.html" },
    { "source": "/about.html", "destination": "/pages/about.html" },
    { "source": "/blog", "destination": "/pages/blog.html" },
    { "source": "/blog.html", "destination": "/pages/blog.html" },
    { "source": "/contact", "destination": "/pages/contact.html" },
    { "source": "/contact.html", "destination": "/pages/contact.html" },
    { "source": "/events", "destination": "/pages/events.html" },
    { "source": "/events.html", "destination": "/pages/events.html" },
    { "source": "/team", "destination": "/pages/team.html" },
    { "source": "/team.html", "destination": "/pages/team.html" },
    { "source": "/testimonials", "destination": "/pages/testimonials.html" },
    { "source": "/testimonials.html", "destination": "/pages/testimonials.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
} 